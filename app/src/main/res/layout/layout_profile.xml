<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@android:color/transparent"
    android:elevation="4dp"
    android:padding="12dp"
    tools:ignore="HardcodedText">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:paddingTop="5sp"
        android:background="@drawable/shape_button_background">

        <!-- Имя заказа -->
        <EditText
            style="@style/VariantText"
            android:id="@+id/editTextProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="Имя заказа"
            android:inputType="text"
            android:textStyle="bold"
            tools:ignore="LabelFor" />
        <!-- Загруженность производства -->
        <LinearLayout
            style="@style/BaseCalculateModule"
            android:layout_width="match_parent"
            android:padding="3sp">

            <Button
                style="@style/BaseText"
                android:layout_width="220sp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="Нагрузка"
                />

            <FrameLayout
                android:elevation="@dimen/cardview_default_radius"
                android:layout_gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:background="@drawable/shape_input_field">

                <EditText
                    style="@style/BaseText"
                    android:id="@+id/editTextWorkLoad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:importantForAutofill="no"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:paddingBottom="10sp"
                    android:hint="%"
                    android:inputType="number" />
            </FrameLayout>


        </LinearLayout>

        <!-- Заказчик -->
        <LinearLayout
            style="@style/BaseCalculateModule"
            android:layout_width="match_parent"
            android:padding="3sp">

            <Button
                style="@style/BaseText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="Заказчик" />

            <FrameLayout
                android:elevation="@dimen/cardview_default_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:background="@drawable/shape_input_field">

                <EditText
                    style="@style/BaseText"
                    android:id="@+id/editTextClient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:importantForAutofill="no"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:paddingBottom="10sp"
                    android:hint="Заказчик"
                    android:inputType="text" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/BaseCalculateModule"
            android:layout_width="match_parent"
            android:padding="3sp">

            <Button
                style="@style/BaseText"
                android:id="@+id/btnCalculateMenu"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:text="Цена"
                android:onClick="btnMaterial" />

            <FrameLayout
                android:elevation="@dimen/cardview_default_radius"
                android:layout_gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:background="@drawable/shape_input_field">

                <TextView
                    style="@style/BaseText"
                    android:id="@+id/viewTextTotalProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:paddingBottom="10sp"
                    android:hint="@string/NumberExample" />
            </FrameLayout>



        </LinearLayout>


        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Кнопка удаления -->
            <ImageButton
                android:id="@+id/btnDeleteProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_delete"
                android:contentDescription="@string/delete"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
